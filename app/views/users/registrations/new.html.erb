<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center mb-5 pb-1">
                  <img src="/assets/app_logo.jpg" style="width: 185px;" alt="logo">
                </div>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "users/shared/error_messages", resource: resource %>

                  <div class="form-outline mb-4">
                    <%= f.label :email %>
                    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Enter Email Address' %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br/>
                    <%= f.password_field :password, autocomplete: 'new-password', placeholder: '********', class: 'form-control' %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :password_confirmation %><br/>
                    <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: '********', class: 'form-control' %>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <%= f.submit 'Sign up', class: 'btn btn-primary btn-block fa-lg mb-3 w-100' %>
                  </div>

                  <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="mb-0 me-2">Already have an account?</p>
                    <%- if controller_name != 'sessions' %>
                      <%= link_to 'Log in', new_session_path(resource_name), class: 'btn btn-outline-danger' %><br/>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <img src="https://cdn11.bigcommerce.com/s-xf1j2e32mt/images/stencil/1280x1280/products/19384/30233/simbapumbatimonladybug__30067.1651535547.jpg?c=1"
                   alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

