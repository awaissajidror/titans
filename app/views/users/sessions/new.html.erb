<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center mb-5 pb-1">
                  <%= image_tag('app_logo.jpg', alt: 'logo', style: 'width: 185px;') %>
                </div>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <p>Please login to your account</p>

                  <div class="form-outline mb-4">
                    <%= f.label :email %>
                    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Enter Email Address' %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :password %>
                    <%= f.password_field :password, autocomplete: 'current-password', placeholder: '********', class: 'form-control' %>
                  </div>

                  <div class="form-outline mb-4">
                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end %>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <%= f.submit 'Log in', class: 'btn btn-primary btn-block fa-lg mb-3 w-100' %>

                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to 'Forgot your password?', new_password_path(resource_name), class: 'text-muted' %><br/>
                    <% end %>
                  </div>

                  <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="mb-0 me-2">Don't have an account?</p>
                    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                      <%= link_to 'Create New', new_registration_path(resource_name), class: 'btn btn-outline-danger' %>
                      <br/>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <%= image_tag('https://pngimg.com/uploads/lion_king/lion_king_PNG17.png', class: 'w-100 vh-100',
                            style: 'object-fit: cover; object-position: left;', alt: 'Login image') %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
