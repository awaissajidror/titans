<h1>Employees</h1>

<%= link_to '+ Employee', new_user_path, class: 'float-end btn btn-primary' %>

<table class="table table-sm table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Phone Number</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.phone_number %></td>
      <td>
        <%= link_to edit_user_path(user), class: 'no-text-deco' do %>
          <%= image_tag('edit.png', alt: 'Edit Icon', width: '20') %>
        <% end %>

        <span class="mx-3">|</span>

        <%= image_tag('trash.png', alt: 'Trash Icon', width: '20', class: 'delete-cash-up cursor-pointer',
                      data: { 'bs-toggle': 'modal', 'bs-target': "#exampleModal-#{user.id}" }) %>

        <span class="mx-3">|</span>

        <%= link_to user_path(user.id) do %>
          <%= image_tag('eye.png', width: '30') %>
        <% end %>
      </td>
    </tr>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal-<%= user.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= link_to 'Delete', user, method: :delete, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </tbody>
</table>

<br>