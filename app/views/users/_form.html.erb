<%= form_tag '/create/employee', method: :post do %>
  <div class="row">
    <div class="col-4">
      <div class="mb-3">
        <%= label_tag :name %>
        <%= text_field_tag 'user[name]', @user.name.present? ? @user.name : nil, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= label_tag :phone_number %>
        <%= text_field_tag 'user[phone_number]', @user.phone_number.present? ? @user.phone_number : nil, class: 'form-control' %>
      </div>

      <div class="d-flex justify-content-between">
        <div>
          <%= link_to 'Back', users_path, class: 'btn btn-secondary' %>
        </div>

        <div>
          <%= submit_tag 'Create Employee', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
