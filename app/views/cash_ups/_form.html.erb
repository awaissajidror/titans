<div class="col-6">
  <%= form_with(model: cash_up) do |form| %>
    <% if cash_up.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(cash_up.errors.count, 'error') %> prohibited this cash_up from being saved:</h2>

        <ul>
          <% cash_up.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :cash, 'CASH' %>
      <%= form.number_field :cash, step: :any, class: 'form-control', id: 'total-cash', value: set_value(form.object.cash) %>
    </div>

    <div class="mb-3">
      <%= form.label :card, 'CARD' %>
      <%= form.number_field :card, step: :any, class: 'form-control', id: 'total-card', value: set_value(form.object.card) %>
    </div>

    <div class="mb-3">
      <%= form.label :eft, 'EFT' %>
      <%= form.number_field :eft, step: :any, class: 'form-control', id: 'total-eft', value: set_value(form.object.eft) %>
    </div>

    <div class="mb-3">
      <%= form.label :refund, 'REFUND' %>
      <%= form.number_field :refund, step: :any, class: 'form-control', id: 'total-refund', value: set_value(form.object.refund) %>
    </div>

    <div class="mb-3">
      <%= form.label :cash_up_date, 'DATE' %>
      <%= form.date_field :cash_up_date, class: 'form-control', value: set_value(form.object.cash_up_date) %>
      <small>Today's date will be selected by default</small>
    </div>

    <div class="mb-3">
      <%= form.label :sub_total, 'SUB TOTAL' %>
      <%= form.text_field :sub_total, class: 'form-control calculated-fields', disabled: true %>
    </div>

    <div class="mb-3">
      <%= form.label :total, 'TOTAL' %>
      <%= form.number_field :total, class: 'form-control', disabled: true %>
    </div>

    <div class="mb-3">
      <%= form.label :note, 'NOTE' %>
      <%= form.text_area :note, rows: 5, class: 'form-control' %>
    </div>

    <button type="button" class="btn btn-primary w-100 mb-3" id="show-calculations">Calculate</button>

    <div class="d-flex justify-content-between">
      <div>
        <%= link_to 'Back', cash_ups_path, class: 'btn btn-secondary' %>
      </div>

      <div>
        <%= form.submit class: 'btn btn-primary', id: 'create-cash-up-btn', disabled: true %>
      </div>
    </div>
  <% end %>
</div>
