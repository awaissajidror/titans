<div class="col-6">
  <%= form_with(model: cash_up) do |form| %>
    <% if cash_up.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(cash_up.errors.count, 'error') %> prohibited this cash_up from being saved:</h2>

        <ul>
          <% cash_up.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :cash, 'CASH' %>
      <%= form.number_field :cash, step: :any, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :card, 'CARD' %>
      <%= form.number_field :card, step: :any, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :eft, 'EFT' %>
      <%= form.number_field :eft, step: :any, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :sub, 'SUB TOTAL' %>
      <%= form.number_field :sub, class: 'form-control calculated-fields', disabled: true %>
    </div>

    <div class="mb-3">
      <%= form.label :total, 'TOTAL' %>
      <%= form.number_field :total, class: 'form-control', disabled: true %>
    </div>

    <div class="mb-3">
      <%= form.label :note, 'NOTE' %>
      <%= form.text_area :note, class: 'form-control' %>
    </div>

    <div class="d-flex justify-content-between">
      <div>
        <%= link_to 'Back', cash_ups_path, class: 'btn btn-secondary' %>
      </div>

      <div>
        <%= form.submit class: 'btn btn-primary' %>

      </div>
    </div>
  <% end %>
</div>
