<div class="d-flex justify-content-between">
  <div>
    <h1>Cash Up</h1>
  </div>

  <div class="my-auto">
    <%= link_to '+ Cash Up', new_cash_up_path, class: 'pull-right btn btn-primary' %>
  </div>
</div>

<table class="table table-sm">
  <thead>
  <tr>
    <th>Cash</th>
    <th>Card</th>
    <th>Eft</th>
    <th>Sub</th>
    <th>Total</th>
    <th>Note</th>
    <th>Created at</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @cash_ups.each do |cash_up| %>
    <tr>
      <td><%= cash_up.cash %></td>
      <td><%= cash_up.card %></td>
      <td><%= cash_up.eft %></td>
      <td><%= cash_up.sub %></td>
      <td><%= cash_up.total %></td>
      <td><%= cash_up.note %></td>
      <td><%= cash_up.created_at.strftime('%m-%d-%Y') %></td>
      <td>
        <%= link_to edit_cash_up_path(cash_up), class: 'no-text-deco' do %>
          <i class="align-middle me-2" data-feather="edit"></i>
        <% end %>

        <span class="mx-3">|</span>

        <%= link_to cash_up, method: :delete do %>
          <i class="align-middle me-2" data-feather="trash-2"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
