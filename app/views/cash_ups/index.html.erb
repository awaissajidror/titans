<div class="d-flex justify-content-between">
  <div>
    <h1>Cash Up</h1>
  </div>

  <div class="my-auto">
    <%= link_to '+ Cash Up', new_cash_up_path, class: 'pull-right btn btn-primary' %>
  </div>
</div>

<table class="table table-sm table-striped">
  <thead>
  <tr>
    <th>Cash</th>
    <th>Card</th>
    <th>Eft</th>
    <th>Refund</th>
    <th>Sub</th>
    <th>Total</th>
    <th>Note</th>
    <th>Created at</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @cash_ups.each do |cash_up| %>
    <tr>
      <td><%= cash_up.cash %></td>
      <td><%= cash_up.card %></td>
      <td><%= cash_up.eft %></td>
      <td><%= cash_up.refund %></td>
      <td><%= cash_up.sub_total %></td>
      <td><%= cash_up.total %></td>
      <td><%= cash_up.note %></td>
      <td><%= cash_up.created_at.strftime('%d-%b-%Y') %></td>
      <td>
        <%= link_to edit_cash_up_path(cash_up), class: 'no-text-deco' do %>
          <img src="/assets/edit.png" alt="Edit Icon" width="20">
        <% end %>

        <span class="mx-3">|</span>

        <img class="delete-cash-up cursor-pointer"
             data-bs-toggle="modal"
             data-bs-target="#exampleModal-<%= cash_up.id %>"
             alt="Trash Icon" src="/assets/delete.png" width="20">

        <span class="mx-3">|</span>

        <%= link_to cash_up_path(cash_up.id) do %>
          <%= image_tag('/assets/eye.png', width: '30') %>
        <% end %>
      </td>
    </tr>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal-<%= cash_up.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= link_to 'Delete', cash_up, method: :delete, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @cash_ups, :container => false %>
</div>




