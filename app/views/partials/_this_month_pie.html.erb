<%= content_tag :div, '', id: 'this_month_pie-container', class: 'hide', data: { source: this_month_pie } %>

<div class="col-12 col-md-6 col-xxl-3 d-flex order-2 order-xxl-3">
  <div class="card flex-fill w-100">
    <div class="card-header">
      <h5 class="card-title mb-0">This Month Pie Chart</h5>
    </div>
    <div class="card-body d-flex">
      <div class="align-self-center w-100">
        <div class="py-3">
          <div class="chart chart-xs">
            <canvas id="chartjs-dashboard-pie"></canvas>
          </div>
        </div>

        <table class="table mb-0">
          <tbody>
          <% @cards.each do |card| %>
            <tr>
              <td><span class="badge <%= render_badge_class(card) %>"><%= card %></span></td>
              <td class="text-end"><%= render_amount(card) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>