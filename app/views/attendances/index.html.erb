<h1>Attendance Sheet</h1>

<table class="table table-sm table-striped">
  <thead>
  <tr>
    <th>Employee Name</th>
    <% DAYS_OF_WEEK.each do |day| %>
      <th><%= day %></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <% DAYS_OF_WEEK.each do |day| %>
        <th>
          <div class="form-check form-check-inline">
            <input class="form-check-input mark-attendance" type="checkbox" id="<%= day.downcase %>-present-<%= user.id %>" name="attendance[present]">
            <label class="form-check-label normal-font" for="<%= day.downcase %>-present-<%= user.id %>">P</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input mark-attendance" type="checkbox" id="<%= day.downcase %>-absent-<%= user.id %>" name="attendance[absent]">
            <label class="form-check-label normal-font" for="<%= day.downcase %>-absent-<%= user.id %>">A</label>
          </div>
        </th>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>